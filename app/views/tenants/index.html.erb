<section class="w-full p-4 bg-neutral rounded-lg shadow-md">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Tenants" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Tenants</h1>
    <%= link_to "New tenant", new_tenant_path, class: "btn btn-primary" %>
  </div>

  <div id="tenants" class="min-w-full space-y-4">
    <% @tenants.each do |tenant| %>
      <div class="p-4 bg-base-200 rounded-lg">
        <%= render tenant %>
        <p class="mt-4">
          <%= link_to "Show this tenant", tenant, class: "btn btn-secondary" %>
        </p>
      </div>
    <% end %>
  </div>
</section>
