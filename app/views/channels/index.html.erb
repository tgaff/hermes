<section class="w-full p-4 bg-neutral rounded-lg shadow-md">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Channels" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Channels</h1>
    <%= link_to "New channel", new_space_channel_path(@space), class: "btn btn-primary" %>
  </div>

  <div id="channels" class="min-w-full space-y-4">
    <% @channels.each do |channel| %>
      <div class="p-4 bg-base-200 rounded-lg">
        <%= render channel %>
        <p class="mt-4">
          <%= link_to "Show this channel", channel, class: "btn btn-secondary" %>
        </p>
      </div>
    <% end %>
  </div>
</section>
