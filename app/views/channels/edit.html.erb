<section class="max-w-2xl mx-auto p-4 bg-neutral rounded-lg shadow-md">
  <h1 class="font-bold text-4xl mb-6">Editing channel</h1>

  <%= render "form", channel: @channel, space: @space %>

  <div class="mt-6 space-x-2">
