<section>
  <h2 class="text-2xl font-bold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div class="form-control">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full max-w-xs" %>
    </div>

    <div class="form-control">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full max-w-xs" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-control">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "checkbox checkbox-primary mr-2" %>
          <%= f.label :remember_me, class: "label cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <div class="form-control mt-6">
      <%= f.submit "Log in", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>