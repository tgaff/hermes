<section class="w-full p-4 bg-neutral rounded-lg shadow-md">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Spaces" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Spaces</h1>
    <%= link_to "New space", new_tenant_space_path, class: "btn btn-primary" %>
  </div>

  <div id="spaces" class="min-w-full space-y-4">
    <% @spaces.each do |space| %>
      <div class="p-4 bg-base-200 rounded-lg">
        <%= render space %>
        <p class="mt-4">
          <%= link_to "Show this space", [@tenant, space], class: "btn btn-secondary" %>
        </p>
      </div>
    <% end %>
  </div>
</section>
